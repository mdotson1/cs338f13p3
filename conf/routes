# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                    controllers.Application.rootIndex()

# Portals
GET     /student                            controllers.Application.studentIndex()
GET     /professor                          controllers.Application.professorIndex()
GET     /admin                              controllers.Application.adminIndex()

# Student resource
GET     /admin/students                     controllers.StudentResource.getAllStudents()
POST    /admin/students                     controllers.StudentResource.addStudent()
GET     /admin/students/:id                 controllers.StudentResource.getStudent(id : Integer)
PUT     /admin/students/:id                 controllers.StudentResource.updateStudent(id : Integer)

# Payment resource
GET     /admin/students/:id/payments        controllers.PaymentResource.getPaymentHistoryForStudent(id : Integer)
POST    /admin/students/:id/payments        controllers.PaymentResource.addPaymentForStudent(id : Integer)
GET     /admin/students/:sid/payments/:id   controllers.PaymentResource.getPayment(sid : Integer, id : Integer)
PUT     /admin/students/:sid/payments/:id   controllers.PaymentResource.updatePayment(sid : Integer, id : Integer)

# Professor resource
GET     /admin/professors                   controllers.ProfessorResource.getAllProfessors()
POST    /admin/professors                   controllers.ProfessorResource.addProfessor()
GET     /admin/professors/:id               controllers.ProfessorResource.getProfessor(id : Integer)
PUT     /admin/professors/:id               controllers.ProfessorResource.updateProfessor(id : Integer)

# Course resource
GET     /admin/courses                      controllers.CourseResource.getAllCourses()
POST    /admin/courses                      controllers.CourseResource.addCourse()
GET     /admin/courses/:deptAndCourseNum    controllers.CourseResource.getCourse(deptAndCourseNum : String)
PUT     /admin/courses/:deptAndCourseNum    controllers.CourseResource.updateCourse(deptAndCourseNum : String)

# Semesters resource
GET     /admin/semesters                    controllers.SemesterResource.getAllSemesters()
POST    /admin/semesters                    controllers.SemesterResource.addSemester()

# Course Offering Resource
POST    /admin/semesters/:seasonAndYear     controllers.CourseOfferingResource.addCourseOffering(seasonAndYear : String)
GET     /admin/semesters/:seasonAndYear     controllers.CourseOfferingResource.getAllCourseOfferingsForSem(seasonAndYear : String)
# cOffering = CS-313-001 for example
GET     /admin/semesters/:sy/:coId     controllers.CourseOfferingResource.getCourseOffering(sy : String, coId : Integer)
PUT     /admin/semesters/:sy/:coId     controllers.CourseOfferingResource.updateCourseOffering(sy : String, coId : Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
